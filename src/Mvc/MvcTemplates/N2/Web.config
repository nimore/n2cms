<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None"/>
  </appSettings>
  <!--
    For a description of web.config changes see http://go.microsoft.com/fwlink/?LinkId=235367.

    The following attributes can be set on the <httpRuntime> tag.
      <system.Web>
        <httpRuntime targetFramework="4.5.2" />
      </system.Web>
  -->
  <system.web>
    <pages enableViewState="true" validateRequest="false" clientIDMode="AutoID" masterPageFile="" theme="" styleSheetTheme="" pageBaseType="System.Web.UI.Page"
      userControlBaseType="System.Web.UI.UserControl">
      <controls>
        <add tagPrefix="n2" assembly="N2" namespace="N2.Web.UI.WebControls"/>
      </controls>
    </pages>
    <authorization>
      <allow users="Admin" roles="Administrators,Editors,Writers"/>
      <deny users="*"/>
    </authorization>
    <customErrors defaultRedirect="installation/diagnose.aspx" mode="Off"/>
    <!-- This settings is required for saving xml in the management UI when using ASP.NET 4.0 -->
    <httpRuntime requestValidationMode="2.0"/>
    <compilation targetFramework="4.5.2"/>
  </system.web>
  <location path="Api">
    <system.web>
      <httpHandlers>
        <add verb="*" path="*.ashx" validate="false" type="N2.Management.Api.ApiHandlerDispatcher, N2"/>
      </httpHandlers>
    </system.web>
    <system.webServer>
      <handlers>
        <add name="ApiHandlerDispatcher" preCondition="integratedMode" verb="*" path="*.ashx" type="N2.Management.Api.ApiHandlerDispatcher, N2"/>
      </handlers>
    </system.webServer>
  </location>
  <location path="App/i18n">
    <system.web>
      <httpHandlers>
        <add verb="*" path="*.js.ashx" validate="false" type="N2.Management.Web.AngularLocalizationHandler, N2.Management"/>
      </httpHandlers>
    </system.web>
    <system.webServer>
      <handlers>
        <add name="ApiHandlerDispatcher" preCondition="integratedMode" verb="*" path="*.js.ashx"
          type="N2.Management.Web.AngularLocalizationHandler, N2.Management"/>
      </handlers>
    </system.webServer>
  </location>
  <location path="Installation">
    <system.web>
      <authorization>
        <allow users="Admin" roles="Administrators"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  <!-- Please remove this location directive and the Installation sub-directory once the installation is done -->
  <location path="Installation/Begin">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="Files/FileSystem/UploadFile.ashx">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="Resources">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="Resources/font-awesome-4.1.0/fonts">
    <system.webServer>
      <handlers>
        <add name="FontHandler" type="N2.Management.Web.FontHandler, N2.Management" path="*" verb="GET"/>
      </handlers>
    </system.webServer>
    <system.web>
      <httpHandlers>
        <add type="N2.Management.Web.FontHandler, N2.Management" path="*" verb="GET"/>
      </httpHandlers>
    </system.web>
  </location>
  <location path="Users">
    <system.web>
      <authorization>
        <allow users="Admin" roles="Administrators"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="Roles">
    <system.web>
      <authorization>
        <allow users="Admin" roles="Administrators"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="Tokens/TokenTemplates">
    <system.web>
      <pages validateRequest="false"
        pageParserFilterType="System.Web.Mvc.ViewTypeParserFilter, System.Web.Mvc, Version=5.2.3, Culture=neutral, PublicKeyToken=31BF3856AD364E35"
        pageBaseType="System.Web.Mvc.ViewPage, System.Web.Mvc, Version=5.2.3, Culture=neutral, PublicKeyToken=31BF3856AD364E35"
        userControlBaseType="System.Web.Mvc.ViewUserControl, System.Web.Mvc, Version=5.2.3, Culture=neutral, PublicKeyToken=31BF3856AD364E35">
        <controls>
          <add assembly="System.Web.Mvc, Version=5.2.3, Culture=neutral, PublicKeyToken=31BF3856AD364E35" namespace="System.Web.Mvc" tagPrefix="mvc"/>
        </controls>
      </pages>
    </system.web>
  </location>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Helpers" publicKeyToken="31bf3856ad364e35"/>
        <bindingRedirect oldVersion="1.0.0.0-3.0.0.0" newVersion="3.0.0.0"/>
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.WebPages" publicKeyToken="31bf3856ad364e35"/>
        <bindingRedirect oldVersion="1.0.0.0-3.0.0.0" newVersion="3.0.0.0"/>
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Mvc" publicKeyToken="31bf3856ad364e35"/>
        <bindingRedirect oldVersion="1.0.0.0-5.2.4.0" newVersion="5.2.4.0"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>